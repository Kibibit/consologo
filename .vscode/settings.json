{
    "workbench.colorCustomizations": {
        "activityBar.activeBackground": "#4a0081",
        "activityBar.activeBorder": "#9f5b00",
        "activityBar.background": "#4a0081",
        "activityBar.foreground": "#e7e7e7",
        "activityBar.inactiveForeground": "#e7e7e799",
        "activityBarBadge.background": "#9f5b00",
        "activityBarBadge.foreground": "#e7e7e7",
        "statusBar.background": "#2d004e",
        "statusBar.foreground": "#e7e7e7",
        "statusBarItem.hoverBackground": "#4a0081",
        "titleBar.activeBackground": "#2d004e",
        "titleBar.activeForeground": "#e7e7e7",
        "titleBar.inactiveBackground": "#2d004e99",
        "titleBar.inactiveForeground": "#e7e7e799"
    },
    "peacock.color": "#2d004e",
    "editor.tabSize": 2,
    "editor.insertSpaces": true,
    "editor.detectIndentation": false,
    "editor.rulers": [80],
    "editor.fontFamily": "Hack, Menlo, Monaco, 'Courier New', monospace",
    "editor.matchBrackets": "always",
    // Terminal
    "terminal.integrated.fontFamily": "Hack, Menlo, Monaco, 'Courier New', monospace",
    "terminal.integrated.fontSize": 14,
    // Workbench
    "workbench.colorTheme": "Andromeda",
    "workbench.editor.showIcons": true,
    "workbench.iconTheme": "vs-seti",
    // Bracket Pair Colorizer
    "bracketPairColorizer.colorMode": "Consecutive",
    "bracketPairColorizer.forceUniqueOpeningColor": true,
    "bracketPairColorizer.showBracketsInGutter": true,
    "window.title": "${activeEditorShort}${separator}${rootName} [kibibit]",
    "typescriptHero.imports.stringQuoteStyle": "'",
    "typescriptHero.imports.grouping": [
      "Plains",
      "Modules",
      "/^@kb-/",
      "Workspace"
  
    ],
    "typescriptHero.imports.organizeOnSave": true,
    "typescriptHero.imports.multiLineTrailingComma": false,
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": true
    }
}